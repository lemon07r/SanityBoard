    "@types/node": "^25.0.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.14.0",
    "globals": "^17.0.0",
    "jszip": "^3.10.1",
    "mdsvex": "^0.12.6",
    "prettier": "^3.7.4",
